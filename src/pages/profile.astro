---
import ProfileHeader from "../components/ProfileHeader.astro";
import TagChips from "../components/TagChips.astro";
import { interests, profile, projects, skills } from "../data/profile";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Profile | ほたるいか"
  description="ほたるいか の詳細プロフィール、興味分野、スキル、代表プロジェクト。"
>
  <ProfileHeader>
    <p class="leading-8 text-slate-600">{profile.longBio}</p>
  </ProfileHeader>

  <section class="mt-6 grid gap-6 md:grid-cols-2">
    <article class="panel px-6 py-5">
      <h2 class="text-lg font-semibold text-slate-800">Interests</h2>
      <ul class="mt-4 list-disc space-y-2 pl-5 text-sm leading-7 text-slate-600 sm:text-base">
        {interests.map((interest) => <li>{interest}</li>)}
      </ul>
    </article>

    <article class="panel px-6 py-5">
      <h2 class="text-lg font-semibold text-slate-800">Skills</h2>
      <ul class="mt-4 list-disc space-y-2 pl-5 text-sm leading-7 text-slate-600 sm:text-base">
        {skills.map((skill) => <li>{skill}</li>)}
      </ul>
    </article>
  </section>

  <section class="mt-6 panel px-6 py-6 sm:px-8 sm:py-8">
    <h2 class="text-xl font-semibold text-slate-800">Projects</h2>
    <div class="mt-5 space-y-4">
      {
        projects.map((project) => (
          <article class="rounded-xl border border-slate-200 bg-slate-50/70 p-4 sm:p-5">
            <div class="flex flex-wrap items-center justify-between gap-2">
              <h3 class="text-base font-semibold text-slate-800">{project.name}</h3>
              <a href={project.url} class="text-sm font-medium">
                View
              </a>
            </div>
            <p class="mt-2 text-sm leading-7 text-slate-600 sm:text-base">{project.description}</p>
            <TagChips
              items={project.tags.map((tag) => ({ label: tag }))}
              className="mt-3"
            />
          </article>
        ))
      }
    </div>
  </section>

  <section class="mt-6 panel px-6 py-6 sm:px-8 sm:py-8">
    <h2 class="text-xl font-semibold text-slate-800">Contact</h2>
    <ul class="mt-4 space-y-3 text-sm leading-7 text-slate-600 sm:text-base">
      <li>
        GitHub: <a href={profile.contact.github}>{profile.contact.github}</a>
      </li>
      <li>X: {profile.contact.x}</li>
      <li>Email: {profile.contact.emailMasked}</li>
    </ul>
  </section>
</BaseLayout>
