---
import { profile } from "../data/profile";

const hasExtra = Astro.slots.has("default");
---

<section class="panel px-6 py-6 sm:px-8 sm:py-8">
  <div class="flex flex-col gap-6 sm:flex-row sm:items-center">
    <img
      src={profile.avatar}
      alt={`${profile.name} avatar`}
      class="h-20 w-20 rounded-full border border-slate-200 bg-slate-50 object-cover"
      width="80"
      height="80"
      loading="eager"
    />

    <div class="min-w-0 flex-1">
      <p class="text-sm text-slate-500">{profile.handle}</p>
      <h1 class="mt-1 text-2xl font-bold tracking-tight text-slate-800 sm:text-3xl">
        {profile.name}
      </h1>
      <p class="mt-3 text-sm leading-7 text-slate-600 sm:text-base">{profile.bio}</p>

      <div class="mt-4 flex flex-wrap gap-2">
        {
          profile.links.map((link) => (
            <a href={link.url} class="outline-link">
              {link.label}
            </a>
          ))
        }
      </div>
    </div>
  </div>

  {
    hasExtra && (
      <div class="mt-5 sm:mt-6">
        <slot />
      </div>
    )
  }
</section>
