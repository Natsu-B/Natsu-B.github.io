---
import { profile } from "../data/profile";

const hasExtra = Astro.slots.has("default");
---

<section class="panel px-6 py-6 sm:px-8 sm:py-8">
  <div class="flex flex-col gap-6 sm:flex-row sm:items-center">
    <img
      src={profile.avatar}
      alt={`${profile.name} avatar`}
      class="h-20 w-20 rounded-full border border-slate-200 bg-slate-50 object-cover"
      width="80"
      height="80"
      loading="eager"
    />

    <div class="min-w-0 flex-1">
      <p class="text-sm text-slate-500">{profile.handle}</p>
      <h1 class="mt-1 text-2xl font-bold tracking-tight text-slate-800 sm:text-3xl">
        {profile.name}
      </h1>
      <p class="mt-3 text-sm leading-7 text-slate-600 sm:text-base">{profile.bio}</p>

      <div class="mt-4 flex flex-wrap gap-2">
        {
          profile.links.map((link) => (
            <a href={link.url} class="outline-link">
              {link.label === "GitHub" && (
                <svg
                  viewBox="0 0 24 24"
                  class="mr-1 inline-block h-4 w-4 align-text-bottom"
                  aria-hidden="true"
                >
                  <path
                    fill="currentColor"
                    d="M12 2C6.48 2 2 6.58 2 12.23c0 4.51 2.87 8.34 6.84 9.69.5.1.68-.22.68-.49v-1.72c-2.78.62-3.37-1.21-3.37-1.21-.46-1.2-1.11-1.52-1.11-1.52-.91-.64.07-.63.07-.63 1 .07 1.53 1.06 1.53 1.06.9 1.57 2.35 1.12 2.92.85.09-.67.35-1.12.64-1.37-2.22-.26-4.56-1.15-4.56-5.1 0-1.13.39-2.05 1.03-2.77-.1-.26-.45-1.32.1-2.76 0 0 .84-.27 2.75 1.06A9.35 9.35 0 0 1 12 6.67c.85 0 1.7.12 2.5.36 1.9-1.33 2.74-1.06 2.74-1.06.55 1.44.21 2.5.11 2.76.64.72 1.02 1.64 1.02 2.77 0 3.96-2.34 4.84-4.58 5.1.36.32.67.94.67 1.9v2.82c0 .27.18.6.69.49A10.27 10.27 0 0 0 22 12.23C22 6.58 17.52 2 12 2Z"
                  />
                </svg>
              )}
              {link.label === "X" && (
                <svg
                  viewBox="0 0 24 24"
                  class="mr-1 inline-block h-4 w-4 align-text-bottom"
                  aria-hidden="true"
                >
                  <path
                    fill="currentColor"
                    d="M18.9 2H22l-6.77 7.74L23.2 22h-6.26l-4.9-7.45L5.5 22H2.4l7.24-8.27L2 2h6.42l4.42 6.78L18.9 2Zm-1.1 18h1.73L7.45 3.9H5.6L17.8 20Z"
                  />
                </svg>
              )}
              {link.label === "Articles" && (
                <svg
                  viewBox="0 0 24 24"
                  class="mr-1 inline-block h-4 w-4 align-text-bottom"
                  aria-hidden="true"
                >
                  <path
                    fill="currentColor"
                    d="M5 4.75A2.75 2.75 0 0 1 7.75 2h9.5A2.75 2.75 0 0 1 20 4.75v14.5A2.75 2.75 0 0 1 17.25 22H7.75A2.75 2.75 0 0 1 5 19.25V4.75Zm2.75-1.25c-.69 0-1.25.56-1.25 1.25v14.5c0 .69.56 1.25 1.25 1.25h9.5c.69 0 1.25-.56 1.25-1.25V4.75c0-.69-.56-1.25-1.25-1.25h-9.5Zm1.75 3.25a.75.75 0 0 1 .75-.75h5.5a.75.75 0 0 1 0 1.5h-5.5a.75.75 0 0 1-.75-.75Zm0 3a.75.75 0 0 1 .75-.75h5.5a.75.75 0 0 1 0 1.5h-5.5a.75.75 0 0 1-.75-.75Z"
                  />
                </svg>
              )}
              {link.label}
            </a>
          ))
        }
      </div>
    </div>
  </div>

  {
    hasExtra && (
      <div class="mt-5 sm:mt-6">
        <slot />
      </div>
    )
  }
</section>
