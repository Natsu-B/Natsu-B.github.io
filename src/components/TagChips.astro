---
export interface TagChipItem {
  label: string;
  href?: string;
  count?: number;
  active?: boolean;
}

interface Props {
  items: TagChipItem[];
  className?: string;
}

const { items, className = "" } = Astro.props;
---

<div class={`flex flex-wrap gap-2 ${className}`}>
  {
    items.map((item) =>
      item.href ? (
        <a href={item.href} class:list={["tag-chip", item.active && "tag-chip-active"]}>
          <span>#{item.label}</span>
          {typeof item.count === "number" && <span class="tag-chip-count">{item.count}</span>}
        </a>
      ) : (
        <span class:list={["tag-chip", item.active && "tag-chip-active"]}>
          <span>#{item.label}</span>
          {typeof item.count === "number" && <span class="tag-chip-count">{item.count}</span>}
        </span>
      ),
    )
  }
</div>

